{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe アクティブなファイルのビルド",
            "command": "g++",
            "args": [
                "-g",
                "-D_GLIBCXX_DEBUG",
                "-W",
                "-fdiagnostics-color=always",
                "-I",
                "${workspaceFolder}\\ac-library",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "コンパイラ: g++"
        }
    ]
}
